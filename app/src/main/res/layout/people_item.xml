<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Category_events"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:alpha="20"
    android:hint="@string/Adress"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvpeop"
        android:layout_width="match_parent"


        android:layout_height="90dp"
        android:alpha="80"
        android:rotation="0"

        android:rotationX="0"
        android:rotationY="0"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:alpha="500"
            android:animateLayoutChanges="true"
            android:scrollbarStyle="outsideOverlay"
            tools:visibility="visible">


            <TextView
                android:id="@+id/peoplename"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="73dp"
                android:layout_marginTop="13dp"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/attending"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/peoplename"
                android:layout_alignParentStart="true"
                android:layout_marginStart="102dp"
                android:layout_marginTop="32dp"
                android:text="@string/Attending"
                android:textColor="@android:color/holo_green_light"
                android:textSize="14sp"
                tools:text="@string/Attending" />

            <ImageView
                android:id="@+id/peoplepicture"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/descr"
                app:srcCompat="@drawable/profile" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>