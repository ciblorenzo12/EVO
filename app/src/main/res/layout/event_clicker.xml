<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Category_events"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:hint="@string/Adress"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_evt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_user_foreground"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/Name_evt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/profile_evt"
                android:layout_toRightOf="@id/profile_evt"
                android:text="This is Demo Name"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Adress_evt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name_evt"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/profile_evt"
                android:text="This is Course Name"
                android:textColor="#000"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/Creator_evt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Adress_evt"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/profile_evt"
                android:text="This is Email Name"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Date_evt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Adress_evt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="31dp"
                android:layout_toRightOf="@id/profile_evt"
                android:text="This is Email Name"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Category_evt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Adress_evt"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="59dp"
                android:layout_toRightOf="@id/profile_evt"
                android:text="This is Email Name"
                android:textColor="#000"
                android:textSize="25sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>