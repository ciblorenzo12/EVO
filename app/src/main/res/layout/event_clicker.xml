<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Category_events"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:alpha="20"
    android:hint="@string/Adress"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:alpha="80"

        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="151dp"
            android:alpha="500"
            android:animateLayoutChanges="true"
            android:scrollbarStyle="outsideOverlay"
            tools:visibility="visible">

            <TextView
                android:id="@+id/Name_evt"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="120dp"
                android:text="This is Demo Name"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Date_evt"
                android:layout_width="238dp"
                android:layout_height="25dp"
                android:layout_below="@+id/Category_evt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="147dp"
                android:layout_marginBottom="31dp"
                android:text="This is Email Name"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Category_evt"
                android:layout_width="243dp"
                android:layout_height="23dp"
                android:layout_below="@+id/Name_evt"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="143dp"
                android:text="This is Email Name"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="65dp"
                android:layout_height="66dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="69dp"
                app:srcCompat="@drawable/iiiiiiiiiiiiiiiiiii" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>