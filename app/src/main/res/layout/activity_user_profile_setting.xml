<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back1"
    android:layout_height="match_parent"
    android:onClick="onClick"
    tools:context=".User_Profile_picture">



    <ImageButton
        android:id="@+id/ProfileSettingsBack"
        android:layout_width="77dp"
        android:layout_height="66dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/back"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="?attr/actionModeCloseDrawable"
        app:tint="#35A9F6"
        tools:ignore="ImageContrastCheck,UsingOnClickInXml" />

    <ImageButton
        android:id="@+id/ProfilePicture"
        android:layout_width="186dp"
        android:layout_height="179dp"
        android:contentDescription="@string/Btn_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/ProfFirstName"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:hint="First Name"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="#808080"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserID" />

    <EditText
        android:id="@+id/ProfPhoneNum"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:hint="Phone Number"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfLastName" />

    <Button
        android:id="@+id/ProfSave"
        android:layout_width="179dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="Save Changes"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfPhoneNum" />

    <Button
        android:id="@+id/ChangePassword"
        android:layout_width="201dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:text="Change Password"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfSave" />

    <EditText
        android:id="@+id/ProfLastName"
        android:layout_width="169dp"

        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:hint="Last Name"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfFirstName" />

    <EditText
        android:id="@+id/UserID"
        android:layout_width="348dp"
        android:layout_height="52dp"

        android:layout_marginTop="24dp"
        android:hint="Display Name"
        android:shadowColor="#9227B0"
        android:textColor="#808080"
        android:textColorHighlight="#9C27B0"
        android:textColorHint="#808080"
        android:textColorLink="#9C27B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePicture" />




</androidx.constraintlayout.widget.ConstraintLayout>